@model DatabaseModels.ToDoList

<h2>@ViewData["Title"]</h2>

<h4>ToDoList</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@ViewData["FormAction"]">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="ListId" type="hidden" />
            <div class="form-group">
                <label asp-for="ListName"></label>
                <input asp-for="ListName" class="form-control" />
                <span asp-validation-for="ListName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@ViewData["ButtonText"]" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}