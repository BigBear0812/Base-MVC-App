@model DatabaseModels.ToDoList

<div>
    <div class="mb-1">
        <h4>@Model.ListName</h4>
        <div class="btn-group" role="group">
            <a class="btn btn-outline-secondary btn-sm" asp-action="EditList" asp-route-listId="@Model.ListId">
                <i class="fas fa-pencil-alt"></i>
            </a>
            <a class="btn btn-outline-secondary btn-sm" asp-action="DeleteList" asp-route-listId="@Model.ListId">
                <i class="fas fa-times"></i>
            </a>
        </div>
        <a class="btn btn-outline-secondary btn-sm" asp-action="CreateItem" asp-route-listId="@Model.ListId">
            <i class="fas fa-plus"></i> Item
        </a>
    </div>
    <ul clas="toDoList-group">
        @foreach (var item in Model.Items)
        {
            <partial name="_Item" model="@item" />
        }
    </ul>
</div>
